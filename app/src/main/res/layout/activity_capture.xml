<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context="com.wang.ian.ocrdemo.ui.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/capture_original_language"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/capture_translation_language"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1" />

    </LinearLayout>

    <com.wang.ian.ocrdemo.ui.camera.CameraSourcePreview
        android:id="@+id/capture_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wang.ian.ocrdemo.ui.camera.GraphicOverlay
            android:id="@+id/capture_graphic_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.wang.ian.ocrdemo.ui.camera.CameraSourcePreview>

</LinearLayout>
